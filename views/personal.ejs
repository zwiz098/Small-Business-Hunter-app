<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>SBS</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
  </head>
  <body>

    <div class="container">
    <!-- LOCAL INFORMATION -->
    <div class="page-header text-center">
      <h1><span class="fa fa-anchor"></span> <%= user.local.username%></h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
  </div>

  <div class="row">

      <!-- LOCAL INFORMATION -->

      <div class="col-sm-6">
        <h3>Messages</h3>
        <ul class="messages">
        <% for(var i=0; i<messages.length; i++) {%>

          <li class="message">

            <a href="/profile"><span><%= messages[i].name %></span></a>
            <img src="<%= messages[i].house[0] %>" alt="<%= user.local.username%>">
            <img src="<%= messages[i].house[1] %>" alt="<%= user.local.username%>">
            <span><%= messages[i].typ %></span>
            <span><%= messages[i].bs %></span>
            <span><%= messages[i].tags %></span>
            <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
            <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
          </li>

        <% } %>
        </ul>

        <h2>Add a message</h2>
      <% if (user.local.email) { %>
        <form action="/messages" method="POST" enctype="multipart/form-data">
          <input type="text" name="userID" value="<%= user._id%>" style="display: none;">
          <input class="postImage" type="file" name="file-to-upload" placeholder="Upload Image" multiple>
          <textarea name="typ" placeholder="Type of Business" rows="8" cols="80"></textarea>
          <textarea name="bs" placeholder="Business Description" rows="8" cols="80"></textarea>
          <textarea name="tags" placeholder="Tags" rows="8" cols="80"></textarea>
          <button type="submit">Submit</button>
        </form>
      </div>
      <% } %>


        <a href="/profile">View Profile</a>

    </div>
  <script src="main.js"></script>
  </body>
</html>
